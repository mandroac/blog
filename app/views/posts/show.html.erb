<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%=link_to "Edit", edit_post_path(@post), :class=>"btn btn-success"%>
<%=link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, :class=>"btn btn-danger"%>
<hr>

<h4><i>Comments</i></h4>
<% @post.comments.each do |comment| %>
<div class="alert alert-light">
<p><strong><%=comment.username%></strong>: <%=comment.body%></p>
</div>

<% end %>

<hr>

<h4><i>Add comment</i></h4>
<%= form_for([@post,@post.comments.build]) do |f| %>

<p>
  User<br>
  <%= f.text_field(:username, {:class => 'form control col-md-8'}) %>
</p>

<p>
  Text<br>

  <%= f.text_area(:body, {:class => 'form control col-md-8'}) %>
</p>

<p>
  <%= f.submit("Add comment", {:class => 'btn btn-outline-dark'}) %>
</p>
<% end %>
